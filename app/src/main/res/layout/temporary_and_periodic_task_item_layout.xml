<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/temporary_and_periodic_task_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="123798127"
            android:textSize="21sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/temporary_and_periodic_task_create_time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="123798127"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"/>
    </LinearLayout>

    <View
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#A3A3A3"/>

    <TextView
        android:id="@+id/temporary_and_periodic_task_is_finished_text_view"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        tools:text="已完成"
        android:gravity="center"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/temporary_and_periodic_task_item_menu_button"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:textSize="50sp"
        android:gravity="center"
        android:background="#CCCCCC"/>

</LinearLayout>